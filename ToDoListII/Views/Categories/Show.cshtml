<!DOCTYPE html>
<html>
    <head>
        <title>ToDoListII</title>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    </head>
    <body>
        <div class="container">
          <h3>Here are all the items in this category:</h3>

          <ol>
          @foreach (var item in @Model["items"])
          {
            <li><a href='/categories/@Model["category"].GetId()/items/@item.GetId()'>@item.GetDescription()</a></li>
          }
          </ol>

          <p><a href='/categories/@Model["category"].GetId()/items/new'>Add a new item</a></p>
          <p><a href='/categories'>Return to category list</a></p>
          <p><a href='/'>Return to Main Page</a></p>
        </div>
    </body>
</html>
